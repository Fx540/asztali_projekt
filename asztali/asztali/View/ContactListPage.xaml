<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="asztali.View.ContactListPage"
             Title="Kapcsolatok">

    <Grid
    Padding="10"
    RowDefinitions="*, Auto"
    RowSpacing="10">
        <CollectionView
        x:Name="ContactsCollectionView"
        Grid.Row="0"
        SelectionChanged="OnSelectionChanged"
        SelectionMode="Single">
            <CollectionView.EmptyView>
                <Label
                HorizontalOptions="Center"
                Text="Nincs megjeleníthető kapcsolat."
                VerticalOptions="Center" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ContactItem">
                    <Frame
                    Margin="0,5"
                    Padding="10"
                    BorderColor="Gray"
                    CornerRadius="5">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="{Binding Name}" />
                                <Label
                                FontSize="14"
                                Text="{Binding PhoneNumber}"
                                TextColor="Gray" />
                            </VerticalStackLayout>

                            <Button
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            BackgroundColor="Red"
                            Clicked="OnDeleteClicked"
                            CommandParameter="{Binding .}"
                            HeightRequest="40"
                            Text="Törlés"
                            TextColor="White" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
        Grid.Row="1"
        Margin="0,10"
        Clicked="OnAddContactClicked"
        Text="Új kapcsolat hozzáadása" />
    </Grid>
</ContentPage>